

main#highcharts-content.content-layout
	h2 Charts
	.panel
		.panel-heading
			h4.panel-title Highcharts
				.panel-widgets
					a
						i.fa.fa-gear
					span.divider
					a
						i.fa.fa-refresh
					span.divider
					a
						i.fa.fa-chevron-down

		.panel-body.with-table
			table.table.table-bordered
				tbody
					tr
						td(ng-controller="AreaChartController", style="width:50%;")
							div(highchart, config="chartConfig", style="height: 300px;")
						td(ng-controller="LineChartController", style="width:50%;")
							div(highchart, config="chartConfig", style="height: 300px;")
					
					tr
						td(ng-controller="BarChartController", style="width:50%;")
							div(highchart, config="chartConfig", style="height: 300px;")
						td(ng-controller="ColumnStackedController", style="width:50%;")
							div(highchart, config="chartConfig", style="height: 300px;")

					tr
						td(ng-controller="PieChartController", style="width:33%;")
							div(highchart, config="chartConfig", style="height: 300px;")
						td(ng-controller="PieSemiChartController", style="width:33%")
							div(highchart, config="chartConfig", style="height: 300px;")

					tr
						td(ng-controller="SplineChartController", colspan="2")
							div(highchart, config="chartConfig", style="height: 300px;")

	.panel
		.panel-heading
			h4.panel-title Morris Charts
				.panel-widgets
					a
						i.fa.fa-gear
					span.divider
					a
						i.fa.fa-refresh
					span.divider
					a
						i.fa.fa-chevron-down

		.panel-body.with-table
			table.table.table-bordered
				tbody
					tr
						td(ng-controller="AreaChartController", style="width:33.333333%;")
							strong Donut Charts


						td(ng-controller="LineChartController", style="width:33.333333%;")
							strong Colored


						td(ng-controller="LineChartController", style="width:33.333333%;")
							strong Formatted

	.row
		.col-md-8
			.panel
				.panel-heading
					h4.panel-title Peity Charts
