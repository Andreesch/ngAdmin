doctype
html(ng-app="welcome", lang="en-US")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no")
    meta(name="description", value= pkg.description)
    meta(name="keywords", value= pkg.keywords)

    //- lt styles
    link(href= makeVersion('css/font-awesome.min.css'), rel="stylesheet", media="screen")
    link(href= makeVersion('css/ngAdmin-" + pkg.version + ".min.css'), rel="stylesheet", media="screen")
    link(href= makeVersion('css/ngAdmin-" + pkg.version + ".docs.min.css'), rel="stylesheet", media="screen")
    title Welcome | ngAdmin

    //- lt scripts
    script(src= makeVersion('scripts/pace-0.5.1.min.js'), async)
    script(src= makeVersion('scripts/angular-1.2.23.min.js'))
    script(src= makeVersion('scripts/angular-route-1.2.23.min.js'))
    script(src= makeVersion('scripts/angular-touch-1.2.23.min.js'))

    script(src='//code.jquery.com/jquery-1.11.0.min.js')
    script(src= makeVersion('scripts/highcharts-4.0.4.min.js'))
    script(src= makeVersion('scripts/highcharts-ng-0.0.8.min.js'))
    script(src= makeVersion('scripts/ngAdmin-' + pkg.version + '.tpls.js'))
    script(src= makeVersion('scripts/ngAdmin-' + pkg.version + '.docs.js'))

    //- lt icons
    link(href="ico/apple-touch-icon-144-precomposed.png", rel="apple-touch-icon-precomposed")
    link(href="ico/favicon.ico", rel="shortcut icon")

  body#welcome-page
    #welcome-container
      .head-module
        .container
          .row
            .col-sm-12
              h1.caption-head ngAdmin
              p.desc-head Please enter your email and password to login.

      .form-module(ng-controller="FormController")
        .container
          .row
            .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
              form(name="form", role="form")
                .form-group
                  .input-group-login.input-group
                    .input-group-addon
                      i.fa.fa-user
                    input.form-control(name="email", type="email", placeholder="Please enter email")

                .form-group
                  .input-group-login.input-group
                    .input-group-addon
                      i.fa.fa-lock
                    input.form-control(name="password", type="password", placeholder="Please enter password")

                .form-group
                  button.btn-login.btn.btn-block(type="button", role="button") Login
                    i.fa.fa-sign-in

      .split-module
        em.line - or -

      .footer-module
        a.forget(title="Forgot password") Forgot Password
        p.copyright Copyright Â© 2014.