

#form-basic-container.content-layout
  h3 Basic Form Elements
  .panel(ng-controller="CollapseDemoController")
    .panel-heading
      .panel-title
        h5 Default Form Inputs
      .panel-widgets
        a(ng-click="isCollapsed = !isCollapsed")
          i.fa.fa-chevron-down

    .panel-collapse.in(collapse="isCollapsed")
      .panel-body
        form.form-horizontal(role="form")
          .form-group
            label.col-sm-3.control-label(for="field-1") Field 1
            .col-sm-5
              input#field-1.form-control(type="text", placeholder="Placeholder")
          .form-group
            label.col-sm-3.control-label(for="field-2") Disabled
            .col-sm-5
              input#field-2.form-control(type="text", placeholder="Placeholder", disabled)
          .form-group
            label.col-sm-3.control-label(for="field-3") Password
            .col-sm-5
              input#field-3.form-control(type="password", placeholder="Placeholder (Password)")
          .form-group
            label.col-sm-3.control-label(for="field-1") File Field
            .col-sm-5
              input#field-file.form-control(type="file", placeholder="Placeholder")
          .form-group
            label.col-sm-3.control-label(for="field-ta-1") Textarea
            .col-sm-5
              textarea#field-ta-1.form-control(placeholder="Textarea")
          .form-group
            label.col-sm-3.control-label(for="field-ta-2") Autogrow
            .col-sm-5
              textarea#field-ta-2.form-control.autogrow(placeholder="I will grow as you type new lines.", style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 48px;")
          .form-group.has-error
            label.col-sm-3.control-label(for="field-4") Error field
            .col-sm-5
              input#field-4.form-control(type="text", placeholder="Placeholder")
          .form-group.has-warning
            label.col-sm-3.control-label(for="field-5") Warning field
            .col-sm-5
              input#field-5.form-control(type="text", placeholder="Placeholder")
          .form-group.has-success
            label.col-sm-3.control-label(for="field-6") Success field
            .col-sm-5
              input#field-6.form-control(type="text", placeholder="Placeholder")
          .form-group
            label.col-sm-3.control-label Select List
            .col-sm-5
              select.form-control
                option Option 1
                option Option 2
                option Option 3
                option Option 4
                option Option 5
          .form-group
            .col-sm-offset-3.col-sm-5
              .checkbox
                label
                  input(type="checkbox")
                  | Checkbox 1
              .checkbox
                label
                  input(type="checkbox")
                  | Checkbox 2
          .form-group
            .col-sm-offset-3.col-sm-5
              .radio
                label
                  input#optionsRadios1(type="radio", name="optionsRadios", value="option1", checked)
                  | Radio Input 1
              .radio
                label
                  input#optionsRadios2(type="radio", name="optionsRadios", value="option2")
                  | Radio Input 2
          .form-group
            .col-sm-offset-3.col-sm-5
              button.btn.btn-success(type="button", role="button") Sign in

