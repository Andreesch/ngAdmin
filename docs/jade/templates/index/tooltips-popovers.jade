

#tooltips-popovers-container.content-layout
  h2 Popovers and Tooltips
  .panel(ng-controller="CollapseDemoCtrl")
    .panel-heading
      .panel-title
        h5 Popovers and Tooltips
      .panel-widgets
        a(ng-click="isCollapsed = !isCollapsed")
          i.fa.fa-chevron-down

    .panel-collapse.in(collapse="isCollapsed")
      .panel-body.bs-example
        h4 Popovers
        p
          button.btn.btn-primary(data-placement="top", data-content="It's so simple to create a tooltop for my website!", data-original-title="Twitter Bootstrap Popover") I"m a Popover
          button.btn.btn-success(data-placement="bottom", data-content="It's so simple to create a tooltop for my website!", data-original-title="Twitter Bootstrap Popover") I"m a Popover
          button.btn.btn-info(data-placement="top", data-content="It's so simple to create a tooltop for my website!", data-original-title="Twitter Bootstrap Popover") I"m a Popover
          button.btn.btn-warning(data-placement="right", data-content="It's so simple to create a tooltop for my website!", data-original-title="Twitter Bootstrap Popover") I"m a Popover
          button.btn.btn-danger(data-placement="left", data-content="It's so simple to create a tooltop for my website!", data-original-title="Twitter Bootstrap Popover") Click me!
      
